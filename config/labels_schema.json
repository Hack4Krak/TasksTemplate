{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "labels": {
        "type": "array",
        "items": {
            "type": "object",
            "properties": {
              "name": {
                  "type": "string"
              },
              "id": {
                  "type": "string"
              },
              "description": {
                  "type": "string"
              }
            },
            "required": ["name", "description"]
        }
    }
  },
  "required": ["labels"]
}
